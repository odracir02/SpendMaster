<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Oscuro"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/darkBoton"
        android:layout_width="396dp"
        android:layout_height="64dp"
        android:stateListAnimator="@null"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="53dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/baseline_dark_mode_24" />

        <TextView
            android:id="@+id/textView50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Oscuro" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/LightBoton"
        android:layout_width="395dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:stateListAnimator="@null"
        app:cardElevation="0dp">
        <TextView
            android:id="@+id/textView51"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="claro"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="53dp"
            android:layout_marginTop="15dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/baseline_brightness_7_24" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/SystemBoton"
        android:layout_width="395dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:stateListAnimator="@null"
        app:cardElevation="0dp">
        <TextView
            android:id="@+id/textView52"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modo sistema"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/imageView19"
            android:layout_marginTop="15dp"
            android:layout_width="53dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/baseline_brightness_6_24" />
    </androidx.cardview.widget.CardView>

</LinearLayout>